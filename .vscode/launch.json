{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ch12/j0 (Attach)",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/src/ch12/j0",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ch12/j0x (Attach)",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/src/ch12/j0x",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch ch13/j0 (bytecode)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/ch13/build/j0",
            "args": ["../hello.java"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/ch13/build",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build ch13/j0"
        },
        {
            "name": "Launch ch13/j0 (x64)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/ch13/build/j0",
            "args": ["-x64", "../hello.java"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/ch13/build",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build ch13/j0"
        },
        {
            "name": "Launch ch13/j0x",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/ch13/build/j0x",
            "args": ["../hello.j0"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/ch13/build",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build ch13/j0"
        },
        {
            "name": "Launch ch13/j0.exe (bytecode)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "j0.exe",
            "args": ["../hello.java"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/ch13/build",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build ch13/j0.exe"
        },
        {
            "name": "Launch ch13/j0.exe (x64)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/ch13/j0.exe",
            "args": ["-x64", "../hello.java"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/ch13",
            "environment": [],
            "externalConsole": false,
            "console": "integratedTerminal",
            "preLaunchTask": "Build ch13/j0.exe"
        },
        {
            "name": "Launch ch13/j0x.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/ch13/j0x.exe",
            "args": ["../hello.j0"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/ch13",
            "environment": [],
            "externalConsole": false,
            "console": "integratedTerminal",
            "preLaunchTask": "Build ch13/j0.exe"
        }
    ]
}